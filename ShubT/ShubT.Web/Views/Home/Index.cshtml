@using ShubT.Web.Models.Product;
@model List<ProductDTO>

<form>
    <div class="container row">
        @foreach(var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-white-50 text-center py-2">@product.Name</h3>
                        <!-- Replace <img> with <div> -->
                        <div class="product-image" style="background-image: url('@product.ImageUrl');"></div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">
                                    @product.Price.ToString("C", new System.Globalization.CultureInfo("hi-IN"))
                                </span>
                                <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
                            </div>
                            <p class="card-text">@Html.Raw(product.Description)</p>
                            <div class="row">
                                <div class="col">
                                    <a asp-action="ProductDetails" asp-route-productId="@product.ProductId"
                                    class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>

<!-- Add this style to make the images consistent in height and width -->
<style>
    .product-image {
        background-size: cover; /* Ensure the image covers the div */
        background-position: center; /* Center the image */
        width: 100%;
        height: 200px; /* Set a fixed height */
        display: block; /* Make it behave like an image */
    }
</style>
